<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/card_bg"> <ImageView
    android:id="@+id/ivCheck"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/check_circle_outline"
    app:tint="#4CAF50"
    android:contentDescription="Success" />

    <TextView
        android:id="@+id/tvConfirmationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The appointment was successfully scheduled!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark_brown"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvConfirmationDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פרטי התור יופיעו כאן"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnConfirmClose"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_modern"
        app:backgroundTint="@null"
        android:text="CLOSE"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>