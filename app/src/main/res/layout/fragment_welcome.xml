<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_warm"
    android:padding="32dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_scissors"
        app:tint="@color/accent_orange" />

    <TextView
        android:id="@+id/tvBrandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="BookMe"
        android:textColor="@color/dark_brown"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBrandName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="The Art of Grooming"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:letterSpacing="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnClientLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_modern"
            android:text="ENTER AS CLIENT"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnBarberLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_outline"
            android:text="BARBER ACCESS"
            android:textColor="@color/accent_orange"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

</RelativeLayout>