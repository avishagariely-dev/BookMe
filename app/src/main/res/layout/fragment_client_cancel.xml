<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClientCancelFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter you details" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:hint="Full Name"
        android:inputType="text"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnFindAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Find My Appointment"
        android:backgroundTint="#673AB7" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/layoutAppointmentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/tvFoundDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details will appear here"
            android:textSize="18sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnConfirmCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Confirm Cancellation"
            android:backgroundTint="#F44336" />
    </LinearLayout>
</LinearLayout>