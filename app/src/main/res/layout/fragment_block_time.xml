<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBlockTime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BlockTimeFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block Time"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Button_ChooseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Date" />

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected date:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From:" />

    <Button
        android:id="@+id/Button_StartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select start time" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To:" />

    <Button
        android:id="@+id/Button_EndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select end time" />

    <EditText
        android:id="@+id/etReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Reason (optional)"
        android:inputType="text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel" />
</LinearLayout>
