<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BarberHomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Barber"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointments for today:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Appointments will appear here) " />


    <Button
        android:id="@+id/Button_BarberCalender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Calender" />

    <Button
        android:id="@+id/Button_Block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block Time" />

    <Button
        android:id="@+id/Button_Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />
</LinearLayout>